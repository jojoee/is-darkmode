{
  "name": "is-darkmode",
  "version": "0.0.0-development",
  "description": "Is macOS using Dark appearance",
  "main": "./index.js",
  "scripts": {
    "jest": "jest",
    "jest.watch": "npm run test -- --watch",
    "commit": "git-cz",
    "coverage.check": "jest --coverage",
    "coverage.report": "cat ./coverage/lcov.info | codecov",
    "semantic-release": "semantic-release",
    "standard": "standard",
    "validate": "npm run standard && npm run coverage.check"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jojoee/is-darkmode.git"
  },
  "keywords": [
    "baht",
    "text"
  ],
  "author": "Nathachai Thongniran <inid3a@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jojoee/is-darkmode/issues"
  },
  "homepage": "https://github.com/jojoee/is-darkmode#readme",
  "dependencies": {},
  "devDependencies": {
    "@semantic-release/npm": "^7.0.5",
    "codecov": "3.6.5",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.1.0",
    "ghooks": "2.0.4",
    "jest": "^23.6.0",
    "npm-run-all": "4.1.5",
    "semantic-release": "^17.0.4",
    "standard": "^12.0.1"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  },
  "standard": {
    "verbose": true,
    "env": "jest"
  }
}
